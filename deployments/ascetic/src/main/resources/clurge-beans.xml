<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="persistenceManager" class="es.bsc.clurge.db.HsqlDbManager"/>
	<bean id="vmManager" class="es.bsc.clurge.vmm.GenericVmManager"/>
	<bean id="deploymentMiddleware" class="es.bsc.clurge.mw.ostack.OpenStackMiddleware"/>
	<bean id="hostsMonitoringManager" class="es.bsc.clurge.ascetic.monitoring.HostsZabbixManager"/>


	<!-- Instances of ASCETiC power and pricing modellers -->
	<bean id="energyModeller" class="es.bsc.clurge.ascetic.modellers.energy.ascetic.AsceticEnergyModellerAdapter"/>
	<bean id="pricingModeller" class="es.bsc.clurge.ascetic.modellers.price.ascetic.AsceticPricingModellerAdapter">
		<constructor-arg ref="energyModeller"/>
	</bean>

	<bean id="cloplaEnergyEstimator" class="es.bsc.clurge.ascetic.clopla.CloplaAsceticEnergyModeller">
		<constructor-arg ref="energyModeller"/>
	</bean>

	<!-- TODO: REMOVE THIS SHIT FROM HERE -->
	<bean id="cloplaPriceEstimator" class="es.bsc.clurge.ascetic.clopla.AsceticCloplaPriceModeller">
		<constructor-arg ref="pricingModeller"/>
		<constructor-arg ref="energyModeller"/>
	</bean>

	<!-- power and pricing modellers also implements Estimator interface, and are registered as ASCETIC estimators -->
	<util:map id="estimators" key-type="java.lang.Class" value-type="es.bsc.clurge.estimates.Estimator">
		<entry key="es.bsc.clurge.ascetic.modellers.energy.ascetic.AsceticEnergyModellerAdapter"
			   value-ref="energyModeller"/>
		<entry key="es.bsc.clurge.ascetic.modellers.price.ascetic.AsceticPricingModellerAdapter"
			   value-ref="energyModeller"/>
	</util:map>

	<!-- ASCETiC components will be invoked in the same order as enmuerated in this list -->
	<util:list id="vmManagerListeners" value-type="es.bsc.clurge.vmm.VmManagerListener">
		<bean class="es.bsc.clurge.ascetic.monitoring.ZabbixVmListener"/>
		<ref bean="energyModeller"/>
		<bean class="es.bsc.clurge.ascetic.MessageQueueVmListener"/>
		<ref bean="pricingModeller"/> <!-- ascetic pm should be invoked after energy modeller -->
	</util:list>

</beans>